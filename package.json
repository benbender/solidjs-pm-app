{
  "name": "solidjs-pm-app",
  "description": "",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/benbender/solidjs-pm-app",
  "repository": {
    "type": "git",
    "url": "https://github.com/benbender/solidjs-pm-app.git"
  },
  "packageManager": "pnpm@7.5.0",
  "engines": {
    "node": ">=16"
  },
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "solid-start dev",
    "build": "solid-start build",
    "start": "solid-start start",
    "lint": "eslint src --ext .ts,.tsx --ignore-path .gitignore",
    "lint:fix": "eslint src --ext .ts,.tsx --fix --ignore-path .gitignore",
    "typecheck": "tsc -b"
  },
  "devDependencies": {
    "solid-app-router": "^0.4.1",
    "solid-js": "^1.4.0",
    "solid-meta": "^0.27.3",
    "solid-start": "0.1.0-alpha.92",
    "solid-start-node": "0.1.0-alpha.92",
    "undici": "^5.8.0",
    "@testing-library/dom": "^8.16.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@types/testing-library__user-event": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-jsonc": "^2.3.1",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-regexp": "^1.7.0",
    "eslint-plugin-tailwindcss": "^3.6.0",
    "eslint-plugin-testing-library": "^5.5.1",
    "postcss": "^8.4.14",
    "postcss-import": "^14.1.0",
    "postcss-preset-env": "^7.7.2",
    "prettier": "^2.7.1",
    "solid-testing-library": "^0.3.0",
    "typescript": "^4.4.3",
    "vite": "^3",
    "vitest": "^0.18.1"
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-preset-env": {}
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:tailwindcss/recommended",
      "plugin:promise/recommended",
      "plugin:regexp/recommended",
      "plugin:compat/recommended",
      "plugin:jsonc/recommended-with-jsonc",
      "plugin:testing-library/dom",
      "plugin:jest-dom/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "reportUnusedDisableDirectives": true,
    "ignorePatterns": [
      "dist",
      "pnpm-lock.yaml",
      ".eslintrc.cjs"
    ]
  },
  "browserslist": [
    "defaults",
    "not op_mini all"
  ]
}
